@model ResatSahinProje2021.Models.Teachers

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/ManagamentPanel/Views/Shared/_Layout.cshtml";
}

<h2>Detaylar</h2>

<div>
    <h4>Öğretmenler</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            İsim
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            Soyisim
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Surname)
        </dd>

        <dt>
            Resim
        </dt>

        <dd>
            <img src="@Model.ImageUrl" width="25%"/>
        </dd>

        <dt>
            Göserilsin mi?
        </dt>

        <dd>
            @Html.DisplayFor(model => model.IsActive)
        </dd>

        <dt>
            Alan Adı
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Branches.Name)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Düzenle", "Edit", new { id = Model.TeacherId }) |
    @Html.ActionLink("Listeye Geri Dön", "Index")
</p>
