@model ResatSahinProje2021.Models.Branches

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/ManagamentPanel/Views/Shared/_Layout.cshtml";
}

<h2>Detaylar</h2>

<div>
    <h4>Alanlar</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Alan Adı
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            Resim
        </dt>

        <dd>

                <img src="@Model.ImageUrl" width="25%" />
            
        </dd>

        <dt>
            Açıklama
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>

        <dt>
            Aktiflik:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.IsActive)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Düzenle", "Edit", new { id = Model.BranchId }) |
    @Html.ActionLink("Listeye Geri Dön", "Index")
</p>
