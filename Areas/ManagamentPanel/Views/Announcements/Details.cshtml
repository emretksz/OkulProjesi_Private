@model ResatSahinProje2021.Models.Announcements

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/ManagamentPanel/Views/Shared/_Layout.cshtml";
}

<h2>Detaylar</h2>

<div>
    <h4>Duyurular</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Başlık
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Title)
        </dd>

        <dt>
            Açıklama
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>

        <dt>
            Resim
        </dt>

        <dd>
            <img src="@Model.ImageUrl" width="25%" />
        </dd>

        <dt>
            Yayınlanma Tarihi
        </dt>

        <dd>
            @Html.DisplayFor(model => model.PublishDate)
        </dd>

        <dt>
           Aktiflik:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.IsActive)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Düzenle", "Edit", new { id = Model.AnnouncementId }) |
    @Html.ActionLink("Listeye Geri Dön", "Index")
</p>
