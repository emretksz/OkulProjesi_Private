    @model IEnumerable<ResatSahinProje2021.Models.Announcements>

    @{
        ViewBag.Title = "Index";
        Layout = "~/Areas/ManagamentPanel/Views/Shared/_Layout.cshtml";
    }

    <h2>Duyurular</h2>

    <p>
        @Html.ActionLink("Yeni Kayıt Ekle", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                Başlık
            </th>
            <th>
                Açıklama
            </th>

            <th>
               Etkinlik Tarihi
            </th>
            <th>
               Durumu
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                
                <td>
                    @Html.DisplayFor(modelItem => item.PublishDate)
                </td>
                <td>
                    @if (item.IsActive == true)
                    {
                        @Html.DisplayName("Aktif");
                    }
                    else
                    {
                        @Html.DisplayName("Pasif");
                    }
                </td>
                <td>
                    @Html.ActionLink("Düzenle", "Edit", new { id = item.AnnouncementId }) |
                    @Html.ActionLink("Detaylar", "Details", new { id = item.AnnouncementId }) |
                    @Html.ActionLink("Sil", "Delete", new { id = item.AnnouncementId })
                </td>
            </tr>
        }

    </table>
