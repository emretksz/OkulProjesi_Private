@model ResatSahinProje2021.Models.SecondaryTeachers

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Detaylar</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Ad:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            Soyad:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Surname)
        </dd>

        <dt>
            Resim:
        </dt>

        <dd>
            <img src="@Model.ImageUrl" alt="Alternate Text" style="height:100px;width:100px" />
        </dd>

        <dt>
            Ders/Konum:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.LessonName)
        </dd>

        <dt>
            Aktiflik:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.IsActive)
        </dd>
        <dt>
            idare:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.IsPrincipal)
        </dd>
    </dl>
</div>
<p>
    @Html.ActionLink("Düzenle", "Edit", new { id = Model.STeacherId }) |
    @Html.ActionLink("Listeye Geri Dön", "Index")
</p>
