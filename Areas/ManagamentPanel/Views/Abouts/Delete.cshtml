@model ResatSahinProje2021.Models.Abouts

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/ManagamentPanel/Views/Shared/_Layout.cshtml";
}

<h2>SİL</h2>

<h3>Bunu silmek istediğinize emin misiniz?</h3>
<div>
    <h4>Hakkında</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
           Başlık
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Title)
        </dd>

        <dt>
           Açıklama
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dd>
            <strong>Resim</strong>
        </dd>
        <dd>
            @foreach (var item in Model.AboutsImages)
            {
                <img src="@item.ImageUrl" width="25%" />
            }
        </dd>
    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Sil" class="btn btn-default" /> |
            @Html.ActionLink("Listeye Geri Dön", "Index")
        </div>
    }
</div>
